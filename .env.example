# Django Settings
SECRET_KEY=django-insecure-your-very-long-secret-key-here-change-in-production-with-at-least-fifty-characters-long
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://0.0.0.0:8000

# Database Settings
# Docker development (recommended):
DATABASE_URL=postgresql://web_scraping_app_user:web_scraping_app_password@db:5432/web_scraping_app_db
# Local SQLite alternative:
# DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL Configuration (for Docker)
POSTGRES_DB=web_scraping_app_db
POSTGRES_USER=web_scraping_app_user
POSTGRES_PASSWORD=web_scraping_app_password

# Redis Settings (for Celery background tasks)
# Docker development (recommended):
REDIS_URL=redis://redis:6379/0
# Local Redis alternative:
# REDIS_URL=redis://localhost:6379/0

# Authentication Configuration
LOGIN_URL=/accounts/login/
LOGIN_REDIRECT_URL=/pages/
LOGOUT_REDIRECT_URL=/accounts/login/

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Logging
LOGGING_LEVEL=INFO

# Scraping Configuration
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_DELAY=1

# Django Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=America/Bogota

# Celery Configuration
CELERY_TASK_SOFT_TIME_LIMIT=1800
CELERY_TASK_TIME_LIMIT=1860
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_ACKS_LATE=True